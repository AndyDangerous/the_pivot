class OrdersController < ActionController::Base
  def show
    current_order ||= Order.create(order_params)
  end

  def new
    current_order ||= Order.create(order_params)
    current_order.order_items.create(item_id: item.id, order_id: current_order.id)
  end

  def order_params
    require(:order).permits(:status, :total, :receiving)
  end
end
