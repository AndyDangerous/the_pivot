<%= form_for [:administrator, @category] do |f| %>

  <div class='field' id='categorytitle'>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  <div class='field' id='categorydescription'>
    <%= f.label :description %><br/>
    <%= f.text_area :description, size: "30x12" %>
  </div>

  <div class='actions'>
    <%= f.submit "Submit" %>
  </div>
<% end %>
