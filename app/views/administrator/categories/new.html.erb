<h1>Add a new category</h1>

<%= form_for @category, html: {multipart: true} do |f| %>

  <div class='field' id='categorytitle'>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  <div class='field' id='categorydescription'>
    <%= f.label :description %><br/>
    <%= f.text_area :description, size: "30x12" %>
  </div>

  <div class='actions'>
    <%= f.submit "Create this Category" %>
  </div>
<% end %>
