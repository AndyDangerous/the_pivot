<%= form_for [:administrator, @item] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :status %>
  <%= f.select(:status, options_for_select([['Active', 1],['Retired', 2]], 1 ))%>

  <%= f.label :description %>
  <%= f.text_area :description, size: "30x12" %>

  <%= f.label :categories %>
  <%= f.select(:categories, options_from_collection_for_select(Category.all, 'title', 'title', @item.categories.pluck(:title)), {}, {multiple: true, size: Category.all.count}) %>

  <%= f.label :image %>
  <%= f.file_field :image %>

<%= f.submit "Submit" %>



<% end %>
