<h1>Administrator Menu View</h1>
<hr/>
<%= link_to 'Create New Item', new_administrator_item_path %>
<%= link_to 'Create New Category', new_administrator_category_path %>
<hr/>
<table class='table'>
  <% @items.each do |item| %>
  <tr>
    <td><%= image_tag item.image.url(:admin_thumb) %> </td>
    <td><%= item.title %></td>
    <td><%= item.description %></td>
    <td><%= item.price %></td>
    <td><strong>Current Status:</strong> <%= item.status %></td>
  
    <td><strong>Assigned Categories:</strong> 
    	<% item.categorizations.each do |category| %>
    	<%= category.title %>
    	<% end %></td>

    <td><%= link_to 'Edit', edit_administrator_item_path(item) %></td>
    <td><%= link_to 'Delete', administrator_item_path(item), method: :delete, data:{ confirm: "Are you sure you want to delete the item: '#{item.title}'" } %></td>
  </tr>
<% end %>
</table>