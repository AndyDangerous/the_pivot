<h1>Administrator Orders Dashboard</h1>
<hr/>

<div style="float:left;width:33.33333333%">
  <%= form_for @order, url: administrator_order_path(@order), method: :find_by do |f| %>
  <%= f.label :find_orders_by_status %>
  <%= f.text_field :status %>
  <%= f.submit "Find Now" %>
  <% end %></div>
<div style="float:left;width:33.33333333%">
  <%= link_to 'Menu Items Dashboard', administrator_items_path %></div>
<div style="float:left;width:33.33333333%">
  <%= link_to 'Categories Dashboard', administrator_categories_path %></div>

<hr/>
<table class='table'>
  <tr>
    <th>User ID</th>
    <th>Total</th>
    <th>Time Created</th>
    <th>Time Updated</th>
    <th>Receiving Method</th>
    <th>Status</th>
    <th>Update Status</th>
  </tr>

  <% @orders.each do |order| %>
  <tr>
    <td><%= order.user_id %> </td>
    <td><%= order.total %></td>
    <td><%= order.created_at %></td>
    <td><%= order.updated_at %></td>
    <td><%= order.receiving %></td>
    <td><%= order.status %></td>
    <td><%= select_tag(:status, options_for_select([['Paid', 1],['Pending', 2],['Cancel', 3]]))%></td>
  </tr>
<% end %>
</table>
