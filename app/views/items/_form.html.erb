<%= form_for @item do |f| %>
  <%= f.label :title, :class => 'control-label' %>
  <%= f.text_field :title, :class => 'text_field' %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :photo %>
  <%= f.text_field :photo%>

  <%= f.label :status %>
  <%= f.text_field :status %>

  <%= f.submit nil %>
  <%= link_to t('.cancel', :default => ("helpers.links.cancel")), items_path %>
<% end %>
