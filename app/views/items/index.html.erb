<div class="items_background">
  <%- model_class = Item -%>
<div class="page-header">
  <h1>Our Menu</h1>
  <% if notice %>
  <p id="notice"><%= notice %></p>
  <% end %>
</div>

<div>
  <p><h5>All prices online are per pint. Ice'Screams are only sold by the scoop in store...</h5></p>
</div>

      <% @categories.each do |category| %>

      <div class="row ">
        <div class="col-md-12 text-center">
            <p class="items_category_title push_down_category"><%= category.title %></p>
        </div>
      </div>

        <div class="container">
          <div class="row">
      <% category.items.active.each do |item| %>
          <div class="col-md-4 col-sm-6" >
          <div class="text-center push_down">
            <div class="img-sizer"><%= image_tag image_or_fallback_user(item), {class: 'img-rounded '} %></div>
            <div class="caption">
              <h3><%= link_to item.title, item_path(item) %></h3>
              <p><%= item.description %></p>
              <%= button_to "#{"I want it"}  | #{number_to_currency(item.price)}",  cart_items_path(item_id: item), {class: 'btn btn-warning '} %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    </div>

      <% end %>


