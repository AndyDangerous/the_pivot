<h1>Our menu</h1>
<hr/>
<table>
  <% @items.each do |item| %>
  <tr>
    <td><%= item.title %></td>
    <td><%= item.description %></td>
    <td><%= item.price %></td>
    <td><select name='Quantity[num]'>
          <%quantity= Array(1..10)%>
          <%quantity.each do |num| %>
            <option name='Quantity[num]'><%= num %>
            <% end %></option>
        </select></td>
    <td><%= button_to "Add to Cart", order_path(1) %>
    <!-- <td><input type='button' method='POST' value='Add to Cart' name='Add to Cart'/></td> -->
  </tr>
  <% end %>
</table>
