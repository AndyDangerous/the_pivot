<% if notice %>
  <%= notice %>
<% end %>

<% @categories.each do |category| %>
  <%= category.title %>
  <% category.items.active.each do |item| %>
    <%= image_tag image_or_fallback_user(item) %>
    <%= link_to item.title, item_path(item) %>
    <%= item.description %>
    <%= button_to "#{"Add To Cart"}  | #{number_to_currency(item.price)}",  cart_items_path(item_id: item) %>
  <% end %>
<% end %>
