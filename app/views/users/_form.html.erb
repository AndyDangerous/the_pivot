<%= form_for @user do |f| %>
  <%= f.label :company_name %>
  <%= f.text_field :company_name %>  
<br>
  <%= f.label :email %>
  <%= f.text_field :email %>
<br>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
<br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
<br>
  <%= f.label :username %>
  <%= f.password_field :username %>
<br>
  <%= f.label :password %>
  <%= f.password_field :password %>
<br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :class => 'password_field' %>
<br>
  <%= f.submit nil %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), home_path %>

<% end %>
